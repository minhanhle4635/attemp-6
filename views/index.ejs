<h1>Search Article</h1>
<form action="/" method="GET">
    <div>
        <label>Name</label>
        <input type="text" name="name" value="<%= searchOptions.name %>">
    </div>
    <button type="submit">Search</button>
</form>

<h2>Recently Added</h2>
<div>
    <% articles.forEach(article=>{ %>
        <table>
            <tr>
                <td><img height="150" width="100" src="<%= article.coverImagePath %>">
                    <a href="/<%= article._id %>">
                        <%= article.name %>
                    </a>
                </td>
                <td>
                    <form action="/download/<%= article._id %>" method="GET">
                        <input type="submit" value="Download">
                    </form>
                </td>
            </tr>
        </table>
        <% }) %>
</div>

